{
  "scripts": {
    "build": "rollup ./src/main.js --file ./public/main.js --format iife",
    "prepare": "husky install"
  },
  "lint-staged": {
    "(src|public)/**": "run-s build --",
    "package.json": [
      "prettier-package-json --write",
      "sort-package-json"
    ]
  },
  "devDependencies": {
    "husky": "^5.2.0",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier-package-json": "^2.1.3",
    "rollup": "^2.42.4",
    "sort-package-json": "^1.49.0"
  }
}
