{
  "private": "true",
  "homepage": "https://sounisi5011.github.io/web-tool--tiny-template/",
  "bugs": {
    "url": "https://github.com/sounisi5011/web-tool--tiny-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sounisi5011/web-tool--tiny-template.git"
  },
  "license": "MIT",
  "author": "sounisi5011",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "fmt": "npm-run-all -p fmt:{config,pkg} -s fmt:{prettier,eslint,prettier}",
    "fmt:config": "prettier --write '**/*.{json,yaml,yml}' '!**/package.json'",
    "fmt:eslint": "run-s 'lint:eslint -- --fix'",
    "fmt:pkg": "run-s fmt:pkg:prettier fmt:pkg:sort",
    "fmt:pkg:prettier": "prettier-package-json --write ./package.json",
    "fmt:pkg:sort": "sort-package-json '**/package.json' '!**/node_modules'",
    "fmt:prettier": "prettier --write '**/*.svelte'",
    "preinstall": "npx only-allow pnpm",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --cache ./",
    "lint:prettier": "prettier --check '**/*.svelte'",
    "prepare": "husky install",
    "start": "sirv ./docs/ --no-clear",
    "test": "run-p test:* lint",
    "test:jest": "jest",
    "test:svelte": "svelte-check",
    "test:tsc": "run-p test:tsc:*",
    "test:tsc:src": "tsc --noEmit",
    "test:tsc:test": "tsc -p ./tests/ --noEmit"
  },
  "dependencies": {
    "codemirror": "^5.60.0",
    "handlebars": "^4.7.7",
    "svelte-textarea-autoresize": "^1.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-typescript": "^8.2.0",
    "@tsconfig/svelte": "^1.0.10",
    "@types/codemirror": "^0.0.108",
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-dprint": "^0.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-svelte3": "^3.1.2",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "js-yaml": "^4.0.0",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "prettier-package-json": "^2.1.3",
    "prettier-plugin-svelte": "^2.2.0",
    "rollup": "^2.42.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sirv-cli": "^1.0.11",
    "sort-package-json": "^1.49.0",
    "svelte": "^3.35.0",
    "svelte-check": "^1.3.0",
    "svelte-preprocess": "^4.6.9",
    "ts-jest": "^26.5.4",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  },
  "engines": {
    "pnpm": "6.x"
  }
}
